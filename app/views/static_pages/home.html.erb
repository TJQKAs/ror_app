<% if logged_in? %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info'%>
    </section>
    <section class="micropost_form">
      <%= render 'shared/micropost_form' %>
    </section>
    <div class="col-md-8">
      <h3> Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </aside>
</div>
<% else %>
<% provide(:title, "Home")%>
<div class="center jumbotron">
  <h1>Welcome to my Home Page</h1>
  <h2>
    This application is connected with
    <a href="http://www.rignum.com">One more website</a>
    sample application.
  </h2>
  <%= link_to "Sign up", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("clone.png", alt: "clone logo"),
         "http://www.rignum.com" %>
<%end%>
